    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Create csv file",
            "cargo": {
                "args": [
                    "build",
                    "--bin=etl_rust",
                    "--package=rust_etl_pipeline"
                ],
                "filter": {
                    "name": "etl_rust",
                    "kind": "bin"
                }
            },
            "args": [
                "create-file",
                "100000"
            ],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Run pipeline",
            "cargo": {
                "args": [
                    "build",
                    "--bin=etl_rust",
                    "--package=rust_etl_pipeline"
                ],
                "filter": {
                    "name": "etl_rust",
                    "kind": "bin"
                }
            },
            "args": [
                "run-pipeline"
            ],
            "cwd": "${workspaceFolder}"
        }
    ]
}